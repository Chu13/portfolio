<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=100%, initial-scale=1">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <header>
        <a href="/"><img id="logo" src="images/code-icon.png" /></a>
      <nav>
        <a <% if (page_name === 'profile') { %>class="current" <% } %> href="/">PROFILE</a>
        <a <% if (page_name === 'skills') { %>class="current" <% } %>  href="/skills">SKILLS</a>
        <a <% if (page_name === 'work') { %>class="current" <% } %>  href="/work">WORK</a>
        <a <% if (page_name === 'resume') { %>class="current" <% } %>  href="resume">RESUME</a>
      </nav>

        <div class="hamburger">
          <div class="hamburger-bar"></div>
          <div class="hamburger-bar"></div>
          <div class="hamburger-bar"></div>
        </div>

    </header>
    <div class="resp-nav">
      <a href="/">PROFILE</a>
      <a href="/skills">SKILLS</a>
      <a href="/work">WORK</a>
      <a href="resume">RESUME</a>
    </div>
    <div class="content">

    <%- body %>

    </div>
    <footer>
      <a href="https://www.linkedin.com/in/jabordones/">linkedin.com/jabordones</a>
      <a id="contact" href="/contact">CONTACT</a>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script>
      $(document).ready(function() {
        $(".hamburger").on("click", function(){
          $(".resp-nav").toggleClass("resp-nav-on");
        });
      });
    </script>
  </body>
</html>
